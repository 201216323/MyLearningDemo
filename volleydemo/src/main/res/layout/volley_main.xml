<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:id="@+id/getString"
        android:text="getString"
        android:layout_width="fill_parent"
        android:layout_height="60dp" />
    <Button
        android:id="@+id/postString"
        android:text="postString"
        android:layout_below="@+id/getString"
        android:layout_width="fill_parent"
        android:layout_height="60dp" />
    <Button
        android:id="@+id/getJson"
        android:text="getJson"
        android:layout_below="@+id/postString"
        android:layout_width="fill_parent"
        android:layout_height="60dp" />
    <ImageView
        android:id="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/getJson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/imageRequest"
        android:text="imageRequest"
        android:layout_below="@+id/imageView"
        android:layout_width="fill_parent"
        android:layout_height="60dp" />
    <Button
        android:id="@+id/imageLoader"
        android:text="imageLoader"
        android:layout_below="@+id/imageRequest"
        android:layout_width="fill_parent"
        android:layout_height="60dp" />
    <Button
        android:id="@+id/nImageView"
        android:text="networkImageView"
        android:layout_below="@+id/imageLoader"
        android:layout_width="fill_parent"
        android:layout_height="60dp" />
    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/networkImageView"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/nImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

</com.android.volley.toolbox.NetworkImageView>

</RelativeLayout>
