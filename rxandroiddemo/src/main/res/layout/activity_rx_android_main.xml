<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".RxAndroidMainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <Button
            android:id="@+id/simple"
            android:text="观察者观察被观察者"
            android:layout_width="fill_parent"
            android:layout_height="60dp" />
        <Button
            android:id="@+id/half_baked"
            android:text="不完整观察者观察被观察者"
            android:layout_width="fill_parent"
            android:layout_height="60dp" />
        <Button
            android:id="@+id/scheduler"
            android:text="线程控制"
            android:layout_width="fill_parent"
            android:layout_height="60dp" />
        <Button
            android:id="@+id/map"
            android:text="map变换"
            android:layout_width="fill_parent"
            android:layout_height="60dp" />
        <Button
            android:id="@+id/flatMap"
            android:text="flatMap变换"
            android:layout_width="fill_parent"
            android:layout_height="60dp" />
        <Button
            android:id="@+id/compose"
            android:text="compose: 对 Observable 整体的变换"
            android:layout_width="fill_parent"
            android:layout_height="60dp" />
        <Button
            android:id="@+id/doOnSubscribe"
            android:text="doOnSubscribe()"
            android:layout_width="fill_parent"
            android:layout_height="60dp" />
        <Button
            android:id="@+id/eventBus"
            android:text="RxJava实现eventBus"
            android:layout_width="fill_parent"
            android:layout_height="60dp" />
    </LinearLayout>

</RelativeLayout>
